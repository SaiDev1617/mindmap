# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here

# Document Parser Configuration
# Set to TRUE to use LlamaParse, FALSE for Docling (default)
USE_LLAMAPARSE=FALSE

# LlamaParse API Key (only needed if USE_LLAMAPARSE=TRUE)
LLAMAPARSE_API_KEY=your_llamaparse_api_key_here

# LLM Model Configuration
LLM_MODEL=gpt-5.1
MAX_SECTION_TEXT_LENGTH=3000

# File Paths
DATA_FOLDER=data
OUTPUT_MD=parser/output/parsed.md
OUTPUT_TOC=toc_tree.json
OUTPUT_MINDMAP=mindmap_transformed.json
